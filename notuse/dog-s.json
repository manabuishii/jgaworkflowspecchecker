{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/person.schema.json",
    "title": "Person",
    "description": "A person",
    "type": "object",
    "properties": {
      "name": {
        "description": "Name of the person",
        "type": "string"
      },
      "dog": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of the dog",
            "type": "string"
          },
          "age": {
            "description": "Age of dog",
            "type": "number"
          }
        },
        "required": ["name"]
      }
    },
    "required": ["name", "dog"]
  }